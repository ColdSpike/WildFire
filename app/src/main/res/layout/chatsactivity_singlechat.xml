<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2.5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/chatactivity_cardview_imageright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <ImageView
                    android:id="@+id/chatactivity_imageright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/in_message_bg" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/chatactivity_time_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time is now bigger img"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chatactivity_cardview_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/chatactivity_message_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/in_message_bg"
                    android:text="Hello"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/chatactivity_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time is now bigger text"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chatactivity_cardview_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <com.halilibo.bettervideoplayer.BetterVideoPlayer
                    android:id="@+id/chatactivity_video"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:bvp_autoPlay="false"
                    app:bvp_disableControls="false">

                </com.halilibo.bettervideoplayer.BetterVideoPlayer>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/chatactivity_time_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time is now bigger video"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>