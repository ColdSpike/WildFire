<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.makrandpawar.chatla.ViewProfileActivity">

    <TextView
        android:id="@+id/viewprofile_txt_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/viewprofile_img_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/viewprofile_txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewprofile_txt_displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="User Status"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <Button
        android:id="@+id/viewprofile_btn_removefriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Remove Friend"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/viewprofile_txt_numberoffriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="number of friends"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_below="@+id/viewprofile_txt_status"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/viewprofile_img_dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/viewprofile_friendsince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewprofile_btn_removefriend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Friend Since:"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
